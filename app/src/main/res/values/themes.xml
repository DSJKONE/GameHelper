<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Game" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
    </style>

    <style name="TabLayoutTextSelected">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayoutTextUnSelected">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_666</item>
    </style>

    <style name="TabLayoutGameTypeTextSelected">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/bg_tab_game_type_selescted_rounded</item>
    </style>

    <style name="TabLayoutGameTypeTextUnSelected">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_666</item>
        <item name="background">@drawable/bg_tab_game_type_rounded</item>
    </style>

</resources>